<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:id="@+id/user_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:hint="@string/user_name"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/repository_name"
            android:hint="@string/repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/followers_numb"
            android:hint="@string/followers_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/forks_numb"
            android:hint="@string/forks_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/issues_numb"
            android:hint="@string/issues_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>